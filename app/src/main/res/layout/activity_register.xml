<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
    tools:context=".ACTIVITIES.RegisterActivity">

    <TextView
        android:id="@+id/tvRegGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Go back"
        android:textColor="#FAFAFA"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegRegister"
        app:layout_constraintVertical_bias="0.327">

        <TextView
            android:id="@+id/gfhugyfhgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_light"
            android:text="already have an account?"
            android:textColor="#DADADA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRegGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:text="Login"
            android:textColor="#DADADA"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/button_white"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:paddingTop="3dp"
        android:paddingBottom="7dp"
        android:text="Register"
        android:textColor="#101010"
        android:textSize="30sp"
        android:theme="@android:style/Widget.Material.Button.Borderless.Colored"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etChangeRePassword"
        app:layout_constraintVertical_bias="0.33999997" />

    <EditText
        android:id="@+id/etRegUsername"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/user_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="enter your username"
        android:maxLength="11"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/tvblah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="ADD LOCATION SELECTOR"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegUsername"
        app:layout_constraintVertical_bias="0.217" />

    <TextView
        android:id="@+id/tvblah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="8 - 22 characters "
        android:textColor="#AEAEAE"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etRegPassword"
        app:layout_constraintTop_toBottomOf="@+id/etRegPassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etRegPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/eye_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="enter your password"
        android:inputType="textPassword"
        android:maxLength="22"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvblah"
        app:layout_constraintVertical_bias="0.057" />

    <EditText
        android:id="@+id/etRegRePassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/eye_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="confirm your password"
        android:inputType="textPassword"
        android:maxLength="22"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvblah2"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/email_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegUsername"
        app:layout_constraintVertical_bias="0.071" />

    <ProgressBar
        android:id="@+id/pbRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
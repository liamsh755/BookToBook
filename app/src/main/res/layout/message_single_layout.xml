<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent">

        <LinearLayout
            android:id="@+id/llMessageRecipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/message_recipient"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvMessageRecipientContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_light"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="lalala"
                android:textColor="#131313"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMessageRecipientTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates_light"
                    android:text="22:22"
                    android:textColor="#535353"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMessageRecipientDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_alternates_light"
                    android:text="31/12/2024"
                    android:textColor="#535353"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMessageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/message_sender"
            android:backgroundTintMode="add"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvMessageSenderContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_light"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="lalala"
                android:textColor="#DCDCDC"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMessageSenderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_alternates_light"
                    android:text="31/12/2024"
                    android:textColor="#9F9F9F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMessageSenderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates_light"
                    android:text="11:11"
                    android:textColor="#9F9F9F"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
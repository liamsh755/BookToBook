<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ACTIVITIES.ChangePasswordActivity">

    <TextView
        android:id="@+id/tvChangeCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Cancel"
        android:textColor="#FAFAFA"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnChangeConfirm"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btnChangeConfirm"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeConfirm"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/btnChangeConfirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_white"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="7dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#222222"
        android:textSize="26dp"
        android:theme="@android:style/Widget.Material.Button.Borderless.Colored"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/tvblah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="8 - 22 characters"
        android:textColor="#AEAEAE"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etChangePassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etChangePassword"
        app:layout_constraintTop_toBottomOf="@+id/etChangePassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etChangeRePassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/eye_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="confirm your password"
        android:inputType="textPassword"
        android:maxLength="22"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvblah2"
        app:layout_constraintVertical_bias="0.088" />

    <EditText
        android:id="@+id/etChangePassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_border"
        android:drawableRight="@drawable/eye_logo"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="left|center_vertical"
        android:hint="enter your password"
        android:inputType="textPassword"
        android:maxLength="22"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#FAFAFA"
        android:textColorHint="#AEAEAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.184" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085">

        <TextView
            android:id="@+id/tvCodeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:gravity="left"
            android:maxLines="1"
            android:text="Reset your password"
            android:textColor="#FBFBFB"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvCodeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:text="Strong passwords include letters, numbers, and punctuation marks."
            android:textColor="#FBFBFB"
            android:textSize="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>